
@model MyStartup.Models.ProductViewModel

@{
    ViewData["Title"] = "Create";
}

<h4><strong>Crear Producto</strong></h4>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddProduct" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CompanyId" />

            <partial name="_Product" />

            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i>
                </button>
                <a asp-action="DetailsCompany" asp-route-id="@Model.CompanyId" class="btn btn-success">
                    <i class=" fas fa-undo-alt"></i>
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

